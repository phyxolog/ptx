# .deliver/config

APP = "ptx"

BUILD_HOST="posttrack.email"
BUILD_USER="phyx"
BUILD_AT="/tmp/edeliver/ptx/builds"

PRODUCTION_HOSTS="posttrack.email" # deploy / production hosts separated by space
PRODUCTION_USER="phyx" # local user at deploy hosts
DELIVER_TO="/home/phyx/applications/ptx" # deploy directory on production hosts

# For *Phoenix* projects, symlink prod.secret.exs to our tmp source
pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/phyx/applications/ptx/config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}

post_erlang_update() {
  symlink_static
}

post_upgrade_release() {
  symlink_static
}

symlink_static(){
  status "running post update!"
  __remote "
    ln -sfn $DELIVER_TO/ptx/lib/ptx$RELEASE-$VERSION/priv/static $DELIVER_TO/ptx/static
  "
}